<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form_inherit_analytic" model="ir.ui.view">
        <field name="name">pos.config.form.view.inherit.analytic</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='accounting_section']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box" groups="analytic.group_analytic_accounting">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Analytic Account</span>
                        <div class="text-muted">
                            Set analytic account for journal entries and pos orders
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label string="Analytic Account"
                                       for="account_analytic_id"
                                       class="col-md-3 o_light_label"
                                       widget="selection"/>
                                <field name="account_analytic_id"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
